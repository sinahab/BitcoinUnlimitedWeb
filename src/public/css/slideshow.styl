//
// Inspired by: https://tympanus.net/codrops/2012/01/02/fullscreen-background-image-slideshow-with-css3/
//

.slideshow, .slideshow:after
    width: 100%;
    height: 70%;
    top: 0px;
    left: 0px;
    z-index: -2;

.slideshow:after
    content: '';
    background: transparent url(../img/slideshow/pattern.png) repeat top left;

.slideshow .slideshow__image--start
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
    color: transparent;
    background-size: cover;
    background-position: 50% 50%;
    background-repeat: none;
    opacity: 1;
    z-index: -3;

.slideshow section span
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
    color: transparent;
    background-size: cover;
    background-position: 50% 50%;
    background-repeat: none;
    opacity: 0;
    z-index: -2;
    -webkit-backface-visibility: hidden;
    -webkit-animation: imageAnimation 15s linear infinite 0s;
    -moz-animation: imageAnimation 15s linear infinite 0s;
    -o-animation: imageAnimation 15s linear infinite 0s;
    -ms-animation: imageAnimation 15s linear infinite 0s;
    animation: imageAnimation 15s linear infinite 0s;

.slideshow section div
    z-index: -1;
    position: absolute;
    bottom: 280px;
    left: 0px;
    width: 100%;
    text-align: center;
    opacity: 0;
    color: #fff;
    -webkit-animation: titleAnimation 15s linear infinite 0s;
    -moz-animation: titleAnimation 15s linear infinite 0s;
    -o-animation: titleAnimation 15s linear infinite 0s;
    -ms-animation: titleAnimation 15s linear infinite 0s;
    animation: titleAnimation 15s linear infinite 0s;

.slideshow section div h3
    font-size: 30px;
    padding: 0;
    line-height: 30px;

.slideshow .slideshow__image--start
    background-image: url(../img/slideshow/blockchain-dim.png)

.slideshow section:nth-child(1) span
    background-image: url(../img/slideshow/blockchain-dim.png)
    -webkit-animation-delay: 0s;
    -moz-animation-delay: 0s;
    -o-animation-delay: 0s;
    -ms-animation-delay: 0s;
    animation-delay: 0s;

.slideshow section:nth-child(2) span
    background-image: url(../img/slideshow/node.png);
    -webkit-animation-delay: 5s;
    -moz-animation-delay: 5s;
    -o-animation-delay: 5s;
    -ms-animation-delay: 5s;
    animation-delay: 5s;

.slideshow section:nth-child(3) span
    background-image: url(../img/slideshow/geese.png);
    -webkit-animation-delay: 10s;
    -moz-animation-delay: 10s;
    -o-animation-delay: 10s;
    -ms-animation-delay: 10s;
    animation-delay: 10s;

.slideshow section:nth-child(1) div
    -webkit-animation-delay: 0s;
    -moz-animation-delay: 0s;
    -o-animation-delay: 0s;
    -ms-animation-delay: 0s;
    animation-delay: 0s;

.slideshow section:nth-child(2) div
    -webkit-animation-delay: 5s;
    -moz-animation-delay: 5s;
    -o-animation-delay: 5s;
    -ms-animation-delay: 5s;
    animation-delay: 5s;

.slideshow section:nth-child(3) div
    -webkit-animation-delay: 10s;
    -moz-animation-delay: 10s;
    -o-animation-delay: 10s;
    -ms-animation-delay: 10s;
    animation-delay: 10s;


/* Animation for the slideshow img/slideshow */
@-webkit-keyframes imageAnimation
    0% { opacity: 0; -webkit-animation-timing-function: ease-in; }
    4% { opacity: 1; -webkit-animation-timing-function: ease-out; }
    40% { opacity: 1 }
    60% { opacity: 0 }
    100% { opacity: 0 }

@-moz-keyframes imageAnimation
    0% { opacity: 0; -moz-animation-timing-function: ease-in; }
    4% { opacity: 1; -moz-animation-timing-function: ease-out; }
    40% { opacity: 1 }
    60% { opacity: 0 }
    100% { opacity: 0 }

@-o-keyframes imageAnimation
    0% { opacity: 0; -o-animation-timing-function: ease-in; }
    4% { opacity: 1; -o-animation-timing-function: ease-out; }
    40% { opacity: 1 }
    60% { opacity: 0 }
    100% { opacity: 0 }

@-ms-keyframes imageAnimation
    0% { opacity: 0;
    -ms-animation-timing-function: ease-in; }
    4% { opacity: 1;
         -ms-animation-timing-function: ease-out; }
    40% { opacity: 1 }
    60% { opacity: 0 }
    100% { opacity: 0 }

@keyframes imageAnimation
    0% { opacity: 0; animation-timing-function: ease-in; }
    4% { opacity: 1; animation-timing-function: ease-out; }
    40% { opacity: 1 }
    45% { opacity: 0 }
    100% { opacity: 0 }

/* Animation for the title */
@-webkit-keyframes titleAnimation
    0% { opacity: 0 }
    8% { opacity: 1 }
    30% { opacity: 1 }
    35% { opacity: 0 }
    100% { opacity: 0 }

@-moz-keyframes titleAnimation
    0% { opacity: 0 }
    8% { opacity: 1 }
    30% { opacity: 1 }
    35% { opacity: 0 }
    100% { opacity: 0 }

@-o-keyframes titleAnimation
    0% { opacity: 0 }
    8% { opacity: 1 }
    30% { opacity: 1 }
    35% { opacity: 0 }
    100% { opacity: 0 }

@-ms-keyframes titleAnimation
    0% { opacity: 0 }
    8% { opacity: 1 }
    30% { opacity: 1 }
    35% { opacity: 0 }
    100% { opacity: 0 }

@keyframes titleAnimation
    0% { opacity: 0 }
    8% { opacity: 1 }
    30% { opacity: 1 }
    35% { opacity: 0 }
    100% { opacity: 0 }

/* Show at least something when animations not supported */
.no-cssanimations .slideshow section span
	opacity: 1;
