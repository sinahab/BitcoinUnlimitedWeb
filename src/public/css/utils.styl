
// variables
$orange = #E67E22
$near-black = #222222
$gray = #9B9B9B

.white
    color: white

.gray
    color: $gray

.black
    color: black

.green
    color: green

.lh-copy
    line-height: 1.6

// links
.link
  color: $gray
  text-decoration: none
  transition: color .15s ease-in

.link:hover, .link:active, .link:focus
  text-decoration: none

.link--underline
  border-bottom: 1px solid currentColor
  padding-bottom: 1px
  text-decoration: none
  transition: color .15s ease-in

.link--underline:hover, .link--underline:active, .link--underline:focus
  text-decoration: none

// dimming effect
.dim
    opacity: 1
    transition: opacity .15s ease-in

.dim:hover, .dim:focus
    opacity: .8
    transition: opacity .15s ease-in

.dim:active
    opacity: .8
    transition: opacity .15s ease-out

// buttons
.btn--primary
    color: white
    text-decoration: none
    background-color: $orange
    border-radius: 4px
    border: 1px solid $orange
    padding: 10px

.btn--primary-large
    color: white
    text-decoration: none
    background-color: $orange
    border-radius: 4px
    border: 1px solid $orange
    padding: 14px 22px

.btn--secondary
    color: black
    text-decoration: none
    background-color: white
    border-radius: 4px
    border: 1px solid $orange
    padding: 10px
